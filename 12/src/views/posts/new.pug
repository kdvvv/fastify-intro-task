extends ../layout/page.pug

block content
  h1.header= 'Статья'
  form(action = '/posts', method = 'post')
    div
      label.form-label Название:
        input.form-control(type = 'text', name = 'title' value=post.title)
    div
      label.form-label Текст:
        textarea.form-control(type = 'text', name = 'body' value=post.body)
    div
      input.btn.btn-primary(type = 'submit', value = 'Создать')
